.shoppingContenner {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.topbtn {
  width: 100%;
  padding: 30rpx 0;
}

.topbtn::after {
  display: table;
  clear: both;
  content: '';
}
.orderNone image{ width: 250rpx; height: 250rpx; margin:156rpx 0 50rpx; }
.orderNone{ color: #999999; font-size: 28rpx; display: flex; align-items: center; flex-direction: column;}
.truegoods{margin-left: 30rpx;}
.adminBtn {
  float: right;
  width: 112rpx;
  height: 56rpx;
  background: linear-gradient(270deg, rgba(59, 87, 255, 1) 0%, rgba(80, 194, 254, 1) 100%);
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #fff;
  line-height: 56rpx;
}

.storeBox {
  padding-bottom: 100rpx;
  width: 100%;
  background: rgba(255, 255, 255, 1);
}

.storeItem {
  box-shadow: 0px 0px 10rpx rgba(0, 0, 0, 0.16);
  border-radius: 8rpx;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;

  align-items: center;
  margin-bottom: 32rpx;
}

.shoppflage {
  width: 38rpx;
  height: 150rpx;
  display: flex;
  align-items: center;
}

.shoppflage image {
  width: 38rpx;
  height: 38rpx;
}

.storeMsg {
  display: flex;
  justify-content: space-between;
}

.storeimg {
  width: 156rpx;
  height: 156rpx;
  margin: 0 16rpx;
}

.storeimg image {
  width: 156rpx;
  height: 156rpx;
}

.storeCont {
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.storemsgtop, .storeBom {
  align-items: center; margin-top: 5rpx;
  display: flex;
  justify-content: space-between;
}

.storeName {
  width: 345rpx;
  color: #333;
  font-size: 28rpx;
}

.storeNum {
  color: #999; 
  font-size: 28rpx;
  margin-left: 30rpx;
}

.volum {
  width: 86rpx;
  height: 32rpx;
  background: rgba(241, 241, 241, 1);
  border-radius: 2rpx;
  font-size: 22rpx;
  color: #666;
  text-align: center;
}

.price {
  color: #fe0502;
  font-size: 32rpx;
}

.postBtn {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 98rpx;
  background: rgba(255, 255, 255, 1);
  padding: 0 30rpx;
  box-sizing: border-box;
  box-shadow: 0px -1rpx 6rpx rgba(0, 0, 0, 0.15);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.postBtn image {
  width: 38rpx;
  height: 38rpx;
  margin-right: 16rpx;
}

.check {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.check text {
  color: #666;
  font-size: 28rpx;
}

.paybtn {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.paymonney {
  color: #3b57ff;
  font-size: 28rpx;
}

.paysave {
  height: 80rpx;
  background: linear-gradient(270deg, rgba(59, 87, 255, 1) 0%, rgba(80, 194, 254, 1) 100%);
  width: 160rpx;
  margin-left: 16rpx;
  border-radius: 40rpx;
  color: #fff;
  font-size: 28rpx;
  line-height: 80rpx;
}
.goodStore{ width: 100%; display: flex; align-items: center; padding-bottom: 30rpx; padding-left: 16rpx;}
.goodStore image{ width: 23rpx; height: 21rpx;}
.storeNametitle{ font-size: 32rpx; color: #333; font-weight: 600; padding-left: 15rpx; width: 505rpx; text-overflow: ellipsis; white-space: nowrap; overflow: hidden;}
