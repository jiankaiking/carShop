.orderMsg {
  width: 100%;
  padding-bottom: 120rpx;
}

.truegoodsa {
  height: 56rpx;
  padding: 0 28rpx;
  font-size: 28rpx;
  background: #fff;
  color: #2caefc;
  border: 1px solid rgba(44, 174, 252, 1);
  line-height: 56rpx;
  border-radius: 44rpx;
}

.firstTable image {
  width: 74rpx;
  height: 74rpx;
  flex-shrink: 0;
}

.paystatus {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}

.saleImage {
  width: 162rpx;
  height: 102rpx;
}

.gopayBtn {
  margin-left: 30rpx !important;
}

.paystatusCont {
  border-radius: 15rpx;
  width: 100%;
  background: linear-gradient(180deg, rgba(59, 87, 255, 1) 0%, rgba(80, 194, 254, 1) 100%);
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 160rpx;
}

.status {
  color: #fff;
  font-size: 32rpx;
}

.statusRight {
  display: flex;
  justify-content: flex-start;
  font-size: 24rpx;
  color: #fff;
  align-items: center;
}

.statusRight1 {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-size: 24rpx;
  color: #fff;
}

.statusRight1 view.timecount {
  padding: 0;
}

.timecount {
  padding-left: 20rpx;
}

.timecount text {
  border-radius: 5rpx;
  display: inline-block;
  padding: 5rpx;
  background: #fff;
  color: #3b57ff;
  font-size: 22rpx;
  text-align: center;
}

.timecount text.centerdian {
  margin: 0 8rpx;
  background: none;
  font-size: 24rpx;
}

.firstTable {
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.orderM {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.orderNum {
  width: 100%;
}

.orderTitle {
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
  padding: 30rpx 0;
}

.orderNum {
  display: flex;
  flex-direction: column;
}

.ordercode {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.ordercode text {
  color: #666;
  font-size: 28rpx;
}

.bottomBtn {
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 98rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  box-shadow: 0px -1px 6px rgba(0, 0, 0, 0.15);
}

.btnCont {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  width: 100%;
}

.btnCont button {
  width: 200rpx;
  height: 80rpx;
  margin-top: 9rpx;
  padding: 0;
  display: block;
  line-height: 80rpx;
  border-radius: 40rpx;
}

.clearBtn {
  border: 1px solid rgba(153, 153, 153, 1);
  color: #999;
  margin-right: 30rpx;
}

.gopayBtn {
  background: linear-gradient(270deg, rgba(59, 87, 255, 1) 0%, rgba(80, 194, 254, 1) 100%);
  color: #fff;
}

button {
  font-size: 28rpx;
  background-color: #fff;
  border: none;
  padding: 0;
  margin: 0;
}

.addressBox {
  width: 100%;
  background: rgba(255, 255, 255, 1);
  border-radius: 8rpx;
  padding: 30rpx;
  box-sizing: border-box;
}

.addressBox-top {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-bottom: 30rpx;
}

.addressName {
  color: #333;
  font-size: 36rpx;
  margin-right: 50rpx;
  font-weight: 600;
}

.addressPhone {
  color: #666;
  font-size: 28rpx;
}

.address {
  display: flex;
  justify-content: space-between;
}

.addressMsg {
  font-size: 28rpx;
  line-height: 40rpx;
}

.rightImg {
  width: 18rpx;
  height: 31rpx;
  padding-left: 50rpx;
}

.rightImg image {
  width: 18rpx;
  height: 31rpx;
}

.goodsMsg {
  width: 100%;
  padding: 30rpx;
  margin: 20rpx 0;
  box-sizing: border-box;
  border-top: 16rpx solid #f5f5f5;
  border-bottom: 16rpx solid #f5f5f5;
}

.goodsbox {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.goodsLeft {
  width: 156rpx;
  height: 156rpx;
  margin-right: 16rpx;
}

.goodsLeft image {
  width: 156rpx;
  height: 156rpx;
}

.goodsRight {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goodsrTop {
  display: flex;
  justify-content: space-between;
}

.goodsNum {
  margin-left: 30rpx;
  color: #999;
}

.goodsName {
  font-size: 28rpx;
}

.price {
  color: #333;
  font-size: 32rpx;
  font-weight: 600;
}

.moneyBox {
  margin-top: 50rpx;
}

.monetItem {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #666;
  font-size: 28rpx;
}

.itempadding {
  padding: 30rpx 0 50rpx;
}

.trueprice {
  color: #fe0502;
}

.saveButtom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 98rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px -1rpx 6rpx rgba(0, 0, 0, 0.15);
}
