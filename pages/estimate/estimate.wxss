/* pages/estimate/estimate.wxss */

.estimate {
  width: 100%;
}

.estimateStart {
  width: 100%;
}

.startMsg {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  border-top: 16rpx solid #f5f5f5;
  border-bottom: 16rpx solid #f5f5f5;
}
.starttext textarea{ width: 100%; height: 200rpx; font-size: 26rpx; color: #666; }
.startTitle {
  color: #333;
  font-size: 32rpx;
}

.starttext {
  color: #999;
  font-size: 24rpx;
  padding: 20rpx 0;
}

.start {
  width: 100%;
}

.start image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 30rpx;
}

.context {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}

.addImg {
  display: flex;
  justify-content: flex-start;
  margin-top: 100rpx;
  flex-wrap: wrap;
}

.addItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 50rpx;
}

.addItem image {
  width: 120rpx;
  height: 120rpx;
  padding-bottom: 20rpx;
}

.addItem text {
  color: #999;
  font-size: 24rpx;
}

.addItemFirst {
  display: flex;
  justify-content: flex-start;
  height: 120rpx;
  align-items: center;
  flex-wrap: wrap;
}

.addItemFirst image {
  width: 120rpx;
  height: 120rpx;
  margin: 0 25rpx;
}

.saveBtn {
  position: fixed;
  bottom: 30rpx;
  left: 0;
  right: 0;
  padding: 0 60rpx;
  box-sizing: border-box;
}

.btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(270deg, rgba(59, 87, 255, 1) 0%, rgba(80, 194, 254, 1) 100%);
  border-radius: 44rpx;
  color: #fff;
  line-height: 88rpx;
}
