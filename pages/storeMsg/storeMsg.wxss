/* pages/storeMsg/storeMsg.wxss */
.contanner{ width: 100%;}
.storeMsg{ width: 100%; border-bottom: 12rpx solid #F5F5F5}
.storemsgImg{ width: 100%; height: 420rpx;}
.storemsgImg image{ width: 100%; height: 420rpx;}
.storeMsgtext{ width: 100%; padding: 0 30rpx; box-sizing: border-box}
.storemsgName{ color: #333333; font-size: 32rpx; font-weight: 600; padding:25rpx 0;}
.storemsgAddress,.storemsgPhone{ color: #666; font-size: 24rpx;}

.recommendBox{ width: 100%; padding: 30rpx 0;}
.recommendTitle{ display: flex; justify-content: center; align-items: center; padding-top: 20rpx;}
.recommendimg{ width: 36rpx; height: 36rpx;}
.recommendimg image{ width: 36rpx; height: 26rpx;}
.textCommend{ color: #3B57FF; font-size: 36rpx; padding:0 16rpx; font-weight: 600}
.recommendNav{ display: flex; padding: 0 30rpx; box-sizing: border-box; justify-content: space-between; flex-wrap: wrap; text-align: center;}
.producImg{ width: 210rpx; height: 210rpx;}
.itemName{ color: #333;font-size: 28rpx; width: 210rpx; overflow: hidden; text-overflow: ellipsis;  padding-top: 16rpx; white-space: nowrap;}
.recommendItem{ padding: 30rpx 0;}
.storemsgMonet{font-size: 24rpx; color: #FE0502;padding: 16rpx 0 30rpx 0;}