/* pages/advRecord/advRecord.wxss */

page {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}

.advRecord {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.advRecordcont {
  width: 100%;
}

.advRecordItem {
  width: 100%;
  padding: 0 30rpx;
  background: #fff;
  box-sizing: border-box;
  margin-top: 30rpx;
}

.advTime {
  color: #999;
  font-size: 24rpx;
  padding-top: 30rpx;
}

.advRecordDate {
  padding: 30rpx 0;
  border-bottom: 1px solid #e3e3e3;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.advRecordDate text:first-child {
  color: #666;
  font-size: 28rpx;
}

.advRecordDate text:last-child {
  color: #333;
  font-size: 28rpx;
}

.advStatus {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.advStatus text {
  color: #999;
  font-size: 28rpx;
}

.advBtn {
  width: 140rpx;
  height: 56rpx;
  border-radius: 44rpx;
}

.btn {
  width: 140rpx;
  height: 56rpx;
  background: linear-gradient(270deg, rgba(59, 87, 255, 1) 0%, rgba(80, 194, 254, 1) 100%);
  border-radius: 44rpx;
  font-size: 28rpx;
  color: #fff;
  line-height: 56rpx;
}

.orderNone image {
  width: 250rpx;
  height: 250rpx;
  margin: 156rpx 0 50rpx;
}

.orderNone {
  color: #999;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}
