.goodsCont {
  width: 100%;

}

.paddingCont {
  width: 100%;
}

.typeconter {
  width: 504rpx;
  height: 56rpx;
  box-shadow: 0px 0px 6rpx rgba(0, 0, 0, 0.15);
  margin: 30rpx 0 50rpx;
  overflow: hidden;
  opacity: 1;
  border-radius: 28rpx;
  background: #fff;
  display: flex;
  align-items: center;
}

.typeconter view {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  height: 56rpx;
  line-height: 56rpx;
  color: #999;
}

.typeconter view.active {
 background:linear-gradient(270deg,rgba(59,87,255,1) 0%,rgba(80,194,254,1) 100%);
  color: #fff;
  border-radius: 28rpx;
}

.addressBox {
  width: 100%;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 10rpx rgba(0, 0, 0, 0.16);
  border-radius: 8rpx;
  padding: 30rpx;
  box-sizing: border-box;
}

.addressBox-top {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-bottom: 30rpx;
}

.addressName {
  color: #333;
  font-size: 36rpx;
  margin-right: 50rpx;
  font-weight: 600;
}

.addressPhone {
  color: #666;
  font-size: 28rpx;
}

.address {
  display: flex;
  justify-content: space-between;
}

.addressMsg {
  font-size: 28rpx;
  line-height: 40rpx;
}

.rightImg {
  width: 18rpx;
  height: 31rpx;
  padding-left: 50rpx;
}

.rightImg image {
  width: 18rpx;
  height: 31rpx;
}

.goodsMsg {
  width: 100%;
  padding: 50rpx 0;
}

.goodsbox {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.goodsLeft {
  width: 156rpx;
  height: 156rpx;
  margin-right: 16rpx;
}

.goodsLeft image {
  width: 156rpx;
  height: 156rpx;
}

.goodsRight {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goodsrTop {
  display: flex;
  justify-content: space-between;
}

.goodsNum {
  margin-left: 30rpx;
  color: #999;
}

.goodsName {
  font-size: 28rpx;
}

.price {
  color: #333;
  font-size: 32rpx;
  font-weight: 600;
}

.moneyBox {
  margin-top: 50rpx;
}

.monetItem {
  width: 100%; padding:5rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #666;
  font-size: 28rpx;
}

.itempadding{ margin-top: 15rpx;}

.trueprice {
  color: #fe0502;
}

.saveButtom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 98rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px -1rpx 6rpx rgba(0, 0, 0, 0.15);
}

.savebox {
  padding: 10rpx 30rpx 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}

.saveMoney {
  font-size: 32rpx;
  color: #333;
}

.saveMoney text {
  color: #fe0502;
  padding-left: 30rpx;
}

.savebtn {
  width: 216rpx;
  height: 80rpx;
}

.btn {
  height: 80rpx;
