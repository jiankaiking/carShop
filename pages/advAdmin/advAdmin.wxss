/* pages/advAdmin/advAdmin.wxss */

.advAdmin {
  width: 100%;
}
.statusNav{ display: flex; justify-content: space-between; align-items: center;}
.advStatus {
 
  width: 100%; padding: 0 30rpx; box-sizing: border-box;
  height: 100rpx;
  font-size: 32rpx;
  color: #999;
  text-align: center;
  line-height: 100rpx;
  background: #f5f5f5;
}
.resBtn{width:132rpx;  margin: 0; padding: 0;
height:46rpx;
background:linear-gradient(270deg,rgba(59,87,255,1) 0%,rgba(80,194,254,1) 100%);

border-radius:44rpx; font-size: 22rpx; color: #fff; line-height: 46rpx; }
.advStatus text {
  color: #fe0502;
}

.advTextare {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  border-bottom: 16rpx solid #f5f5f5;
}

.advAdminImg {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.advTitle {
  font-size: 32rpx;
  color: #333;
  padding: 30rpx 0;
}

.advText {
  width: 100%;
  height: 300rpx;
}

.textarea {
  width: 100%;
  height: 250rpx;
  overflow: hidden;
  font-size: 28rpx;
}

.placeClass {
  color: #999;
}

.radio {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.radio text {
  color: #fe0502;
}

.radio radio {
  margin-right: 30rpx;
}

radio {
  transform: scale(0.8);
}

.start image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 30rpx;
}

.context {
  width: 100%;
  padding: 30rpx 0;
  box-sizing: border-box;
}

.addImg {
  display: flex;
  justify-content: flex-start;
  margin-top: 50rpx;
  flex-wrap: wrap;
}

.addItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 50rpx;
}

.addItem image {
  width: 120rpx;
  height: 120rpx;
  padding-bottom: 20rpx;
}

.addItem text {
  color: #999;
  font-size: 24rpx;
}

.addItemFirst {
  display: flex;
  justify-content: flex-start;
  height: 158rpx;
  align-items: center;
  flex-wrap: wrap;
  position: relative;
}

.rightTop {
  position: absolute;
  right: 13rpx;
  top: -13rpx;
  width: 26rpx;
  height: 26rpx;
}

.rightTop image {
  width: 26rpx;
  height: 26rpx;
}

.addItemFirst > image {
  width: 300rpx;
  height: 158rpx;
  margin: 0 25rpx;
  border-radius: 12rpx;
}

.postBtn {
  padding: 0 60rpx;
  width: 100%;
  box-sizing: border-box;
}

.btn {
  height: 88rpx;
  background: linear-gradient(270deg, rgba(59, 87, 255, 1) 0%, rgba(80, 194, 254, 1) 100%);
  border-radius: 44rpx;
  color: #fff;
  font-size: 32rpx;
  line-height: 88rpx;
}

.advStatus text.advStatus {
  color: #2caefc;
}

radio .wx-radio-input {
  width: 38rpx;
  height: 38rpx;
  border-radius: 50%;
}

radio .wx-radio-input.wx-radio-input-checked::before {
  border-radius: 50%;
  width: 65rpx;
  height: 65rpx;
  text-align: center;
  line-height: 65rpx;
  background: linear-gradient(270deg, rgba(59, 87, 255, 1) 0%, rgba(80, 194, 254, 1) 100%);
}
