/* pages/search/search.wxss */

.searchPage {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.searchTop {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding-top: 10rpx;
}

.searchBarCenter {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 550rpx;
  height: 68rpx;
  border-radius: 40rpx;
  background: #f5f5f5;
}

.searchImg {
  width: 32rpx;
  height: 32rpx;
  padding-left: 20rpx;
  padding-right: 10rpx;
}

.searchImg image {
  width: 32rpx;
  height: 32rpx;
}

.inputSearch {
  width: 80%;
  height: 68rpx;
  font-size: 24rpx;
}

.inputSearch input {
  height: 68rpx;
}

.searchBtn {
  width: 108rpx;
  height: 68rpx;
  border-radius: 40rpx;
}

.btn {
  width: 108rpx;
  height: 68rpx;
  background: linear-gradient(270deg, rgba(59, 87, 255, 1) 0%, rgba(80, 194, 254, 1) 100%);
  opacity: 1;
  border-radius: 40rpx;
  color: #fff;
  font-size: 24rpx;
  line-height: 68rpx;
}

.seachHistore {
  width: 100%;
}

.historeTitle {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 45rpx;
}

.historeTitle button {
  margin: 0;
  width: 88rpx;
  padding: 0;
  line-height: 44rpx;
  height: 44rpx;
  border: 1px solid rgba(153, 153, 153, 1);
  opacity: 1;
  font-size: 28rpx;
  color: #999;
  border-radius: 22rpx;
}

.historeTitle text {
  color: #333;
  font-size: 32rpx;
}

.searchHotnav {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.searItem {
  padding: 14rpx 16rpx;
  background: rgba(241, 241, 241, 1);
  color: #333;
  font-size: 28rpx;
  text-align: center;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  border-radius: 2rpx;
}

.searchHotnav {
  margin-top: 35rpx;
}
