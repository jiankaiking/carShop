/* pages//addvip/addvip.wxss */

.addVip {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}

.vipbox {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  background: linear-gradient(270deg, rgba(93, 117, 255, 1) 0%, rgba(119, 208, 255, 1) 100%);
  display: flex;
  flex-direction: column;
  border-radius: 12rpx;
}

.viptop {
  display: flex;
  justify-content: flex-start;
}

.aticorVip, .aticorVip image {
  width: 140rpx;
  height: 140rpx;
}

.aticorVip {
  margin-right: 16rpx;
}

.vipstore {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 10rpx 0;
  box-sizing: border-box;
}

.vipstore image {
  width: 32rpx;
  height: 32rpx;
}

.storeName {
  color: #fff;
  font-size: 32rpx;
}

.storeMoney {
  color: #fe4c4c;
  font-size: 24rpx;
}

.address {
  width: 100%;
  display: flex;
  align-items: center;
  margin-top: 10rpx;
  justify-content: flex-start;
}

.address image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.address text {
  color: #fff;
  font-size: 24rpx;
}

.optionsconfim {
  margin-top: 50rpx; height: 267rpx;
  width: 100%;
  padding: 0 90rpx;
  box-sizing: border-box;
  box-shadow: 0px 0px 6rpx rgba(0, 0, 0, 0.16);border-radius:12rpx;
}
.confimTitle { padding: 49rpx 0 70rpx; text-align: center; font-size: 32rpx; color: #666666; font-weight: 600}
.buttonBox{ width: 100%; display: flex; justify-content: space-between;}
.buttonBox button{ width: 168rpx; height: 56rpx; color: #fff; font-size: 28rpx;background:linear-gradient(270deg,rgba(93,117,255,1) 0%,rgba(119,208,255,1) 100%); line-height: 56rpx; border-radius:44rpx;}
