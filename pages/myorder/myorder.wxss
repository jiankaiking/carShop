/* pages/myorder/myorder.wxss */

page {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}

.orderContenner {
  width: 100%;
}
.orderNone image{ width: 250rpx; height: 250rpx; margin:156rpx 0 50rpx; }
.orderNone{ color: #999999; font-size: 28rpx; display: flex; align-items: center; flex-direction: column;}
.truegoods{margin-left: 30rpx;}
.truegoodsa ,.truegoods{ height:56rpx; padding: 0 28rpx; font-size: 28rpx;background: #fff; color: #2CAEFC;
border:1px solid rgba(44,174,252,1); line-height: 56rpx;border-radius:44rpx;}
.orderTop {
  position: fixed; z-index: 2;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  background: #fff;
  height: 88rpx;
}
.playOrder .botRight text{ color: #999999; font-size: 28rpx; margin-right: 30rpx;}
.orderNav {
  display: flex; background: #fff;
  justify-content: flex-start;
}
.botRight{ display: flex; align-items: center;}
.orderItem {
  flex: 1;
  text-align: center;
  line-height: 88rpx;
  font-size: 28rpx;
  color: #333;
  position: relative;
}

.active {
  color: #2caefc;
}

.active::after {
  position: absolute;
  content: "";
  width: 44rpx;
  bottom: 12rpx;
  left: 50%;
  margin-left: -22rpx;
  height: 4rpx;
  background: #2caefc;
  opacity: 1;
  border-radius: 2rpx;
}

.storeBox {
  width: 100%;
  margin-top: 120rpx;
  padding: 0 30rpx 30rpx;
  box-sizing: border-box;
}

.storeItem {
  box-shadow: 0px 0px 10rpx rgba(0, 0, 0, 0.16);
  background: #fff;
  border-radius: 8rpx;
  padding: 30rpx;
  box-sizing: border-box;
  margin-bottom: 32rpx;
}

.shoppflage {
  width: 38rpx;
  height: 100%;
}

.shoppflage image {
  width: 38rpx;
  height: 38rpx;
}

.storeMsg {
  display: flex;
  justify-content: space-between;
}

.storeimg {
  width: 156rpx;
  height: 156rpx;
  margin-right:  16rpx;
}

.storeimg image {
  width: 156rpx;
  height: 156rpx;
}

.storeCont {
  display: flex;
  width: 100%;
  justify-content: space-between;
  flex-direction: column;
}

.storemsgtop, .storeBom {
  display: flex;
  justify-content: space-between;
}

.storeName {
  color: #333;
  font-size: 28rpx;
}

.storeNum {
  color: #999;
  font-size: 28rpx;
  margin-left: 30rpx;
}

.volum {
  width: 86rpx;
  height: 32rpx;
  background: rgba(241, 241, 241, 1);
  border-radius: 2rpx;
  font-size: 22rpx;
  color: #666;
  text-align: center;
}

.price {
  color: #fe0502;
  font-size: 32rpx;
}
.storeAddress{ color: #999999; font-size: 22rpx}
.playOrder {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}
.lastTime{ color: #999999; font-size: 24rpx; padding-top: 20rpx}
.lastTime text{ color:#FE0502; margin-left: 20rpx;}
.playOrder text {
  color: #2caefc;
  font-size: 28rpx;
}

.paybtn {
  width: 140rpx;
  height: 56rpx;
  background: linear-gradient(270deg, rgba(59, 87, 255, 1) 0%, rgba(80, 194, 254, 1) 100%);
  margin: 0;
  padding: 0;
  font-size: 28rpx;
  color: #fff;
  line-height: 56rpx;
  border-radius: 44rpx;
}
