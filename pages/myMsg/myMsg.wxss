}
.contactBox{ position: relative;}

.contactBtn{ position: absolute; width: 100%; height: 100%; opacity: 0;}
.myBox {
  width: 100%;
  background: linear-gradient(180deg, rgba(59, 87, 255, 1) 0%, rgba(80, 194, 254, 1) 100%);
  position: relative;
  opacity: 1;
  border-bottom-right-radius: 200rpx;
  border-bottom-left-radius: 200rpx;
  height: 400rpx;
}
.loginImg{ margin-top: 15rpx;}
.loginImg image{ width: 80rpx; height: 80rpx; border-radius: 50%;}
.mypic {
  margin-right: 13rpx;
}

.mypic, .mypic image {
  width: 120rpx;
  height: 120rpx;
}

.bgc {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0,0,0,.5); 
 
}
.logintitle{ color: #333; font-weight: bold; font-size: 34rpx;}
.loginMsg{ color: #333; font-size: 30rpx; padding: 15rpx 0;}
.loginMsg1{ color: #999; font-size: 28rpx;}
.loginbtn {
  background: #fff;
 text-align: center; padding-top: 30rpx;
  position: fixed;
  top: 50%;
  z-index: 1000; margin-top: -250rpx;
  left: 50%; margin-left: -250rpx;
  width: 500rpx;
}
.loginbtn button::after{ border: none;}
.loginbtn button {
  margin: 0 auto;

  height: 86rpx;

  font-size: 32rpx;
  line-height: 86rpx;
  background:#fff; color: #3B57FF; 
}

.mypic image {
  border-radius: 50%;
}

.isVip image {
  width: 38rpx;
  height: 38rpx;
  padding-top: 5rpx;
}

.optionsItem image {
  width: 56rpx;
  height: 56rpx;
}

.padding {
  position: absolute;
  padding: 0 30rpx;
  width: 100%;
  box-sizing: border-box;
  bottom: -26rpx;
  left: 0;
  right: 0;
}

.mymsg {
  height: 350rpx;
  background: #fff;
  width: 100%;
  border-radius: 12rpx;
  box-shadow: 0px 3px 20rpx rgba(0, 0, 0, 0.2);
}

.msgtop {
  display: flex;
  justify-content: flex-start;
  padding: 30rpx;
  box-sizing: border-box;
}

.mypic {
  margin-right: 13rpx;
}

.mytext {
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.isVip {
  display: flex;
  align-items: center;
  margin-top: 7.5rpx;
}

.myname {
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 7.5rpx;
}

.isVip text {
  color: #999;
  font-size: 28rpx;
}

.myorderOptions {
  width: 100%;
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
}

.optionsItem {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.optionsItem text {
  font-size: 24rpx;
  color: #666;
  margin-top: 16rpx;
}

.advertising {
  margin-top: 70rpx;
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.advertisingbox {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  background: linear-gradient(270deg, rgba(255, 255, 255, 1) 0%, rgba(254, 254, 254, 1) 52%, rgba(254, 223, 179, 1) 100%);
  box-shadow: 0px 0px 10rpx rgba(0, 0, 0, 0.16);
  border-radius: 8rpx;
  height: 150rpx;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.advImg {
  width: 100rpx;
  height: 100rpx;
  margin-right: 30rpx;
}

.advImg image {
  width: 100rpx;
  height: 100rpx;
}

.advtext {
  color: #92522e;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.advtext text:first-child {
  font-size: 36rpx;
}

.advtext text:last-child {
  font-size: 28rpx;
}

.advBtn {
  width: 112rpx;
  height: 56rpx;
  background: linear-gradient(314deg, rgba(253, 134, 69, 1) 0%, rgba(255, 186, 89, 1) 100%);
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #fff;
  line-height: 56rpx;
  margin-left: 145rpx;
}

.mymeniu {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}

.meniuItem image {
  width: 56rpx;
  height: 56rpx;
  margin: 0 auto;
}

.meniuBox {
  width: 100%;
  display: flex;
 
  flex-wrap: wrap;
}

.meniuItem {
  display: flex;
  justify-content: center;
  flex-direction: column;
  width: 33.3%;
  text-align: center;
  margin-top: 50rpx;
}

.meniuItem text {
  color: #333;
  font-size: 28rpx;
  display: inline-block;
  margin-top: 16rpx;
}
