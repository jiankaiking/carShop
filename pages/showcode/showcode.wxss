/* pages/showcode/showcode.wxss */

.showCode {
  width: 100%;
  padding: 0 60rpx;
  box-sizing: border-box;
  margin-top: 120rpx;
}

.showBox {
  width: 100%;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 10rpx rgba(0, 0, 0, 0.16);
}

.showMsg {
  display: flex;
  justify-content: flex-start;
  padding: 60rpx;
  box-sizing: border-box;
}

.msgImg, .msgImg image {
  width: 80rpx;
  height: 80rpx;
}

.msgImg {
  margin-right: 16rpx;
}

.msgName {
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.msgName text:first-child {
  color: #333;
  font-size: 32rpx;
}

.msgName text:last-child {
  color: #999;
  font-size: 24rpx;
}
.showImg{ width: 100%;  padding: 0 60rpx; box-sizing: border-box; margin-top: 40rpx;}
.showImg image{ width: 510rpx; height: 510rpx;}
.showalt{  padding: 30rpx 60rpx 60rpx; font-size: 28rpx; color: #333; box-sizing: border-box;}